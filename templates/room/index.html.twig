{% extends 'base.html.twig' %}

{% block title %}Room index{% endblock %}

{% block body %}
    <h4 style="margin: 5px;">Room index</h4>

    <table class="table table-bordered table-hover table-striped mb-4">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nb_personnes</th>
                <th>Descriptions</th>
                <th>Type</th>
                <th>Prix</th>
                <th>Hotel</th>
                <th>Options</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for room in rooms %}
            <tr>
                <td>{{ room.id }}</td>
                <td>{{ room.nbPersonnes }}</td>
                <td>{{ room.description }}</td>
                <td>{{ room.type }}</td>
                <td>{{ room.prix }}</td>
                <td>{{ room.idHotel }}</td>

                <td>{% for option in options %}
                        {% if room.id2==option.room_id %}
                            {{ option.description}}
                            <br>
                        {% endif %}
                    {% endfor %}
                </td>
                <td>
                    <a href="{{ path('room_show', {'id': room.id}) }}">show</a>
                    <a href="{{ path('room_edit', {'id': room.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class="btn-outline-primary" href="{{ path('room_new') }}">Create new</a>
{% endblock %}
