{% extends 'base.html.twig' %}

{% block title %}Gallery index{% endblock %}

{% block body %}
<h4 style="margin: 5px;">Gallery index</h4>

    <table class="table table-bordered table-hover table-striped mb-4">
        <thead>
            <tr>
                <th>Id</th>
                <th>Imgpath</th>
                <th>Hotel name</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for gallery in galleries %}
            <tr>
                <td>{{ gallery.id }}</td>
                <td>{{ gallery.imgpath }}</td>
                <td>{{ gallery.hotel_id }}</td>

                <td>
                    <a href="{{ path('gallery_show', {'id': gallery.id}) }}">show</a>
                    <a href="{{ path('gallery_edit', {'id': gallery.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class="btn-outline-primary" href="{{ path('gallery_new') }}">Create new</a>
{% endblock %}
